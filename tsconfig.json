{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2015",
      "DOM"
    ],
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "server/src/*",
        "client/src/*",
      ],
    },
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*"
  ],
}